{
  "name": "authorization-service",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "GPL-3.0",
  "engineStrict": true,
  "engines": {
    "node": ">=14 <17"
  },
  "scripts": {
    "clean": "rimraf dist node_modules",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "build:docker": "yarn build:docker:stage:build && yarn build:docker:stage:dependencies-prod && docker build . -t did-auth-proxy-auth-server",
    "build:docker:stage:build": "docker build . --target build -t authorization-service-stage-build",
    "build:docker:stage:dependencies-prod": "docker build . --target dependencies-prod -t authorization-service-stage-dependencies-prod",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "yarn lint --fix",
    "test": "yarn test:unit && yarn test:e2e",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:unit": "jest",
    "test:e2e": "cd test && jest --config ./jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.0.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/jwt": "^10.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/swagger": "^6.0.0",
    "@nestjs/terminus": "9.2.2",
    "class-transformer": "^0.5.0",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.0.0",
    "didkit-wasm-node": "^0.1.6",
    "ethers": "^5.7.0",
    "express": "^4.0.0",
    "ioredis": "^5.0.0",
    "joi": "^17.0.0",
    "jsonwebtoken": "^9.0.0",
    "nestjs-pino": "^3.0.0",
    "passport": "^0.6.0",
    "passport-did-auth": "2.0.0",
    "passport-jwt": "^4.0.0",
    "pino-http": "^8.0.0",
    "pino-pretty": "^9.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "siwe": "1.1.6",
    "swagger-ui-express": "^4.0.0"
  },
  "devDependencies": {
    "@energyweb/eslint-config": "^0.1.0",
    "@energyweb/prettier-config": "^0.0.1",
    "@golevelup/ts-jest": "^0.3.2",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/cookie-parser": "^1.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.0.0",
    "@types/joi": "^17.0.0",
    "@types/node": "^16.0.0",
    "@types/passport-jwt": "^3.0.6",
    "@types/passport-local": "^1.0.34",
    "@types/set-cookie-parser": "^2.4.2",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-jest": "^27.0.0",
    "eslint-plugin-no-only-tests": "^3.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^29.0.0",
    "node-mocks-http": "^1.0.0",
    "prettier": "^2.3.2",
    "redis-memory-server": "^0.7.0",
    "set-cookie-parser": "^2.4.8",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^29.0.0",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.3.5",
    "webpack": "^5.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix"
    ]
  }
}
