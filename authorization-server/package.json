{
  "name": "authorization-service",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "GPL-3.0",
  "engineStrict": true,
  "engines": {
    "node": "18",
    "npm": "please-use-yarn",
    "pnpm": "please-use-yarn"
  },
  "scripts": {
    "clean": "rimraf dist node_modules",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "build:docker": "yarn build:docker:stage:build && yarn build:docker:stage:dependencies-prod && docker build . -t did-auth-proxy-auth-server",
    "build:docker:stage:build": "docker build . --target build -t authorization-service-stage-build",
    "build:docker:stage:dependencies-prod": "docker build . --target dependencies-prod -t authorization-service-stage-dependencies-prod",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "yarn lint --fix",
    "test": "yarn test:unit && yarn test:e2e",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:unit": "jest",
    "test:e2e": "cd test && jest --config ./jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "10.3.1",
    "@nestjs/config": "3.1.1",
    "@nestjs/core": "10.3.1",
    "@nestjs/jwt": "10.2.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/passport": "10.0.3",
    "@nestjs/platform-express": "10.3.1",
    "@nestjs/swagger": "7.2.0",
    "@nestjs/terminus": "10.2.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "cookie-parser": "1.4.6",
    "didkit-wasm-node": "0.1.6",
    "ethers": "5.7.2",
    "express": "4.18.2",
    "ioredis": "5.3.2",
    "joi": "17.12.0",
    "jsonwebtoken": "9.0.2",
    "nestjs-pino": "3.5.0",
    "passport": "0.7.0",
    "passport-did-auth": "2.0.0",
    "passport-jwt": "4.0.1",
    "pino-http": "8.6.1",
    "pino-pretty": "10.3.1",
    "reflect-metadata": "0.2.1",
    "rxjs": "7.8.1",
    "siwe": "2.1.4",
    "swagger-ui-express": "5.0.0"
  },
  "devDependencies": {
    "@energyweb/eslint-config": "0.1.0",
    "@energyweb/prettier-config": "0.0.1",
    "@golevelup/ts-jest": "0.4.0",
    "@nestjs/cli": "10.3.0",
    "@nestjs/schematics": "10.1.0",
    "@nestjs/testing": "10.3.1",
    "@types/cookie-parser": "1.4.6",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.11",
    "@types/joi": "17.2.3",
    "@types/node": "18.19.10",
    "@types/passport-jwt": "3.0.13",
    "@types/passport-local": "1.0.38",
    "@types/set-cookie-parser": "2.4.7",
    "@types/supertest": "2.0.16",
    "@typescript-eslint/eslint-plugin": "6.19.1",
    "@typescript-eslint/parser": "6.19.1",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest": "27.6.3",
    "eslint-plugin-no-only-tests": "3.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "jest": "29.7.0",
    "node-mocks-http": "1.14.1",
    "prettier": "3.2.4",
    "redis-memory-server": "0.10.0",
    "rimraf": "5.0.5",
    "set-cookie-parser": "2.6.0",
    "source-map-support": "0.5.21",
    "supertest": "6.3.4",
    "ts-jest": "29.1.2",
    "ts-loader": "9.5.1",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.3.3",
    "webpack": "5.90.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix"
    ]
  }
}
